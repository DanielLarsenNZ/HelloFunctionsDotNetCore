{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "loaderio": {
            "matchCondition": {
                "methods": [ "GET" ],
                "route": "/%loader.io%"
            },
            "responseOverrides": {
                "response.body": "%loader.io%",
                "response.headers.Content-Type": "text/plain"
            }
        }
    }
}